<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class="well">
  <dl class="dl-horizontal">
    <dt>Username:</dt>
    <dd><%=@user.username %></dd>
  </dl>
</div>

<h5><%= @user.username %>'s Activity</h5>

<ul class="nav nav-tabs">
  <li role="presentation" class="active">
    <%= link_to "Posts (#{@user.posts.length})", "#posts", data: {toggle: "tab"} %>
  </li>
  <li role="presentation">
    <%= link_to "Comments (#{@user.comments.length})", "#comments", data: {toggle: "tab"} %>
  </li>
</ul>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="posts">
    <% @user.posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </div>
  <div role="tabpanel" class="tab-pane" id="comments">
    <% @user.comments.each do |comment| %>
      <%= render 'comments/comment', comment: comment, show_post: true %>
    <% end %>
  </div>
</div>
